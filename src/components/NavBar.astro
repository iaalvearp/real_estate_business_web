<script>
    const toggleBtn = document.getElementById('toggleBtn');
    const upLine = document.getElementById('upLine');
    const downLine = document.getElementById('downLine');
    const menu = document.getElementById('menu');

    const openMenu = () => {
        upLine.style.transform = "rotate(45deg)"
        upLine.style.marginBottom = "-0.125rem"
        downLine.style.transform = "rotate(-45deg)"
        downLine.style.marginTop = "-0.125rem"
    }
    const closeMenu = () => {
        upLine.style.transform = "rotate(0)"
        upLine.style.marginBottom = "0.5rem"
        downLine.style.transform = "rotate(0)"
        downLine.style.marginTop = "0.5rem"
    }

    toggleBtn.addEventListener('click', ()=> {
        if (upLine.style.transform == "rotate(45deg)" && downLine.style.transform == "rotate(-45deg)") closeMenu()
        else openMenu()
    })

</script>

